{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "./dist", "./__mocks__", "**/*.mock.*"]
}
